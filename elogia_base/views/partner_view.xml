<odoo>
    <data>
        <!-- View form inherit res.partner-->
        <record id="view_partner_form_inherited_elogia" model="ir.ui.view">
            <field name="name">view.partner.form.inherited.elogia</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="attrs">{'required':[('company_type','=','person')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="attrs">{'required':[('company_type','=','company')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="trade_name" placeholder="Trade name" attrs="{'invisible': [('is_company','=', False)]}"/>
                </xpath>
                <xpath expr="//group[@name='sale']/field[@name='user_id']" position="before">
                    <field name="employee"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_tree_inherited_elogia" model="ir.ui.view">
            <field name="name">view.partner.tree.inherited.elogia</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="trade_name"/>
                </xpath>
             </field>
        </record>

        <record id="view_partner_filter_inherited_elogia" model="ir.ui.view">
            <field name="name">view.partner.filter.inherited.elogia</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="trade_name"/>
                </xpath>
             </field>
        </record>

        <record model="ir.ui.view" id="view_res_partner_form_private_inherited_elogia">
            <field name="name">view.res.partner.form.private.inherited.elogia</field>
            <field name="inherit_id" ref="base.res_partner_view_form_private"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_partner_property_inherit_form" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_receivable_id']" position="before">
                    <field name="payment_id" options="{'no_open':True, 'no_create_edit': True}"/>
                    <field name="payment_supplier_id" options="{'no_open':True, 'no_create_edit': True}"/>
                    <field name="third_party" attrs="{'required': [('company_type','=', 'company')]}"/>
                </xpath>
                <xpath expr="//field[@name='property_account_payable_id']" position="after">
                    <field name="property_account_passive_id"/>
                    <field name="company_bank_ids" widget="many2many_tags" invisible="1"/>
                    <field name="other_bank_id" domain="[('id', 'in', company_bank_ids)]" options="{'no_create':True, 'no_create_edit': True}"/>
                </xpath>
                <xpath expr="//field[@name='property_account_position_id']" position="attributes">
                    <attribute name="attrs">{'required':[('company_type','=','company')]}</attribute>
                </xpath>
            </field>
        </record>

        <!-- View form inherit res.partner.category-->
        <record id="view_partner_category_form_inherit" model="ir.ui.view">
            <field name="name">view_partner_category_form_inherit</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_form"/>
            <field name="arch" type="xml">
            <!-- Added fields -->
                <field name="active" position="after">
                  <field name="auto_notify" widget="boolean_toggle"/>
                </field>
            </field>
        </record>

        <!-- View inherit Form account.move-->
        <record id="view_move_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">account.move.form.inherit.elogia.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="payment_mode_id" options="{'no_open':True, 'no_create_edit': True, 'no_create': True}"
                           attrs="{'invisible':[('move_type','in', ['entry', 'out_receipt', 'in_receipt', 'in_invoice', 'in_refund'])]}"/>
                    <field name="payment_supplier_id" options="{'no_open':True, 'no_create_edit': True, 'no_create': True}"
                           attrs="{'invisible':[('move_type','in', ['entry', 'out_receipt', 'in_receipt', 'out_invoice', 'out_refund'])]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt', 'out_invoice', 'out_refund', 'out_receipt'))],
                         'readonly': [('state', '!=', ('draft'))]}
                    </attribute>
                </xpath>
                <xpath expr="//group[@name='sale_info_group']/field[@name='partner_bank_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_vendor_bill_id']" position="before">
                    <field name="ref_previous" placeholder="Ref. " attrs="{'invisible':[('move_type','not in', ['in_invoice', 'in_refund',
                        'in_receipt', 'out_invoice', 'out_refund', 'out_receipt'])]}"/>
                    <field name="fiscal_folio" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- View inherit tree account.move-->
        <record id="view_move_out_tree_inherit_elogia_base" model="ir.ui.view">
            <field name="name">account.move.out.tree.inherit.elogia.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ref_previous"/>
                </xpath>
                <!--<xpath expr="//field[@name='state']" position="before">
                    <field name="sii_state" optional="show"/>
                </xpath>-->
            </field>
        </record>

        <record id="view_move_out_credit_tree_inherit_elogia_base" model="ir.ui.view">
            <field name="name">account.move.out.credit.tree.inherit.elogia.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_credit_note_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                        <field name="ref_previous"/>
                </xpath>
                <!--<xpath expr="//field[@name='state']" position="before">
                    <field name="sii_state" optional="show"/>
                </xpath>-->
            </field>
        </record>

        <record id="view_move_in_tree_inherit_elogia_base" model="ir.ui.view">
            <field name="name">account.move.in.tree.inherit.elogia.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ref_previous"/>
                </xpath>
                <!--<xpath expr="//field[@name='state']" position="before">
                    <field name="sii_state" optional="show"/>
                </xpath>-->
            </field>
        </record>

        <record id="view_move_in_refund_tree_inherit_elogia_base" model="ir.ui.view">
            <field name="name">account.move.in.refund.tree.inherit.elogia.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_refund_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ref_previous"/>
                </xpath>
                <!--<xpath expr="//field[@name='state']" position="before">
                    <field name="sii_state" optional="show"/>
                </xpath>-->
            </field>
        </record>

        <!-- View inherit Form account.move-->
        <record id="view_account_invoice_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">view.account.invoice.form.inherit.elogia.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="before">
                    <field name="product_id" options="{'no_quick_create': True}" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution']" position="before">
                    <field name="employee_id" options="{'no_create_edit': True, 'no_create': True}" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_distribution']" position="before">
                    <field name="employee_id" options="{'no_create_edit': True, 'no_create': True}" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- View inherit Form account.asset-->
        <record id="view_account_asset_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">view.account.asset.form.inherit.elogia.base</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='model_id']" position="after">
                    <field name="partner_id" options="{'no_create_edit': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_asset_tree_inherit_elogia_base" model="ir.ui.view">
            <field name="name">view.account.asset.tree.inherit.elogia.base</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='original_value']" position="after">
                    <field name="partner_id"/>
                </xpath>
            </field>
        </record>

        <!--View inherit Form sale.order-->
        <record id="sale_order_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.elogia.base</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="type_journal_id" options="{'no_create_edit': True, 'no_create': True}"
                           domain="[('type', '=', 'sale')]"/>
                    <field name="department_id" options="{'no_create_edit': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

         <!-- View Form setting.type.journal -->
        <record model="ir.ui.view" id="setting_type_journal_form">
            <field name="name">setting.type.journal.form</field>
            <field name="model">setting.type.journal</field>
            <field name="arch" type="xml">
                <form string="Type journal">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group name="first_group">
                                <field name="type_journal"/>
                                <field name="check_default"/>
                            </group>
                            <group name="second_group">
                                <field name="journal_id"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="type"/>
                                <field name="company_id"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree setting.type.journal -->
        <record model="ir.ui.view" id="setting_type_journal_tree">
            <field name="name">setting.type.journal.tree</field>
            <field name="model">setting.type.journal</field>
            <field name="arch" type="xml">
                <tree string="Type journal" editable="bottom" sample="1">
                    <field name="name"/>
                    <field name="type_journal"/>
                    <field name="check_default" required="True"/>
                    <field name="journal_id"/>
                    <field name="type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- View search setting.type.journal -->
        <record model="ir.ui.view" id="setting_type_journal_search">
            <field name="name">setting.type.journal.search</field>
            <field name="model">setting.type.journal</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="type_journal"/>
                    <field name="journal_id"/>
                    <field name="type"/>
                    <field name="company_id"/>
                    <filter name="type_convencional" string="Convencional" domain="[('type_journal', '=', 'Convencional')]"/>
                    <filter name="type_intercompany" string="Intercompany" domain="[('type_journal', '=', 'Intercompany')]"/>
                    <separator/>
                    <filter name="type_sale" string="Sale" domain="[('type', '=', 'sale')]"/>
                    <filter name="type_purchase" string="Purchase" domain="[('type', '=', 'purchase')]"/>
                    <filter name="type_others" string="Others" domain="[('type', 'not in', ['sale', 'purchase'])]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Type journal" name="group_type_journal" domain="[]" context="{'group_by':'type_journal'}"/>
                        <filter string="Journal" name="group_journal_id" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Type" name="group_type" domain="[]" context="{'group_by':'type'}"/>
                        <filter string="Company" name="group_company_id" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_setting_type_journal" model="ir.actions.act_window">
            <field name="name">Type journal</field>
            <field name="res_model">setting.type.journal</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a type journal!
                </p>
            </field>
            <field name="domain">[('type','=','sale')]</field>
        </record>

        <record id="action_setting_type_journal_accounting" model="ir.actions.act_window">
            <field name="name">Type journal</field>
            <field name="res_model">setting.type.journal</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a type journal!
                </p>
            </field>
            <field name="context">{'search_default_type_intercompany': 1}</field>
        </record>

        <!-- View Form payment.mode.client -->
        <record model="ir.ui.view" id="payment_mode_client_form">
            <field name="name">payment.mode.client.form</field>
            <field name="model">payment.mode.client</field>
            <field name="arch" type="xml">
                <form string="Payment mode">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group name="first_group">
                                <field name="create_uid"/>
                            </group>
                            <group name="second_group">
                                <field name="create_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree payment.mode.client -->
        <record model="ir.ui.view" id="payment_mode_client_tree">
            <field name="name">payment.mode.client.tree</field>
            <field name="model">payment.mode.client</field>
            <field name="arch" type="xml">
                <tree string="Payment mode" editable="bottom" sample="1">
                    <field name="name"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_payment_mode_client" model="ir.actions.act_window">
            <field name="name">Payment mode</field>
            <field name="res_model">payment.mode.client</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a payment mode!
                </p>
            </field>
        </record>

        <!-- View inherit Form bank.rec.widget-->
        <record id="view_bank_rec_widget_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">view.bank.rec.widget.form.inherit.elogia.base</field>
            <field name="model">bank.rec.widget</field>
            <field name="inherit_id" ref="account_accountant.view_bank_rec_widget_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_distribution']" position="after">
                    <field name="form_employee_id" options="{'no_create_edit': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <!-- View inherit Form account.reconcile.model-->
        <record id="view_account_reconcile_model_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">view.account.reconcile.model.form.inherit.elogia.base</field>
            <field name="model">account.reconcile.model</field>
            <field name="inherit_id" ref="account.view_account_reconcile_model_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="employee_id" options="{'no_create_edit': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <!-- View inherit Form res.country-->
        <record id="view_res_country_form_inherit_elogia_base" model="ir.ui.view">
            <field name="name">res.country.form.inherit.elogia.base</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat_label']" position="after">
                    <field name="check_vat"/>
                </xpath>
            </field>
        </record>

        <menuitem id="sale_order_type_journal_elogia_menu" name="Type journal" action="action_setting_type_journal"
                  parent="sale.menu_sales_config" sequence="2"/>
        <menuitem id="sale_order_payment_mode_elogia_menu" name="Payment mode" action="action_payment_mode_client"
                  parent="sale.menu_sales_config" sequence="3"/>
        <menuitem id="account_type_journal_accounting_elogia_menu" name="Type journal" action="action_setting_type_journal_accounting"
                  parent="account.account_invoicing_menu" sequence="99"/>
    </data>
</odoo>
